import { Component } from '@angular/core';
import { CommonModule } from '@angular/common'; // Import CommonModule
import { FormsModule } from '@angular/forms'; // Import FormsModule for ngModel

// Define interfaces directly in the component file
interface File {
  fileName: string;
  path: string;
}

interface FolderType {
  [type: string]: File[];
}

interface ParentFolder {
  [parentFolder: string]: FolderType;
}

@Component({
  selector: 'app-link',
  standalone: true,
  imports: [FormsModule, CommonModule], // Add CommonModule and FormsModule here
  templateUrl: './link.component.html',
  styleUrls: ['./link.component.css']
})
export class LinkComponent {
  title = 'FVRelease Emails Content';

  searchQuery: string = '';

  // Static data simulating database content
  groupedData: ParentFolder = {
    'Parent Folder 1': {
      'Type 1': [
        { fileName: 'file1.txt', path: '/path/to/file1.txt' },
        { fileName: 'file2.txt', path: '/path/to/file2.txt' },
      ],
      'Type 2': [
        { fileName: 'file3.txt', path: '/path/to/file3.txt' },
        { fileName: 'file4.txt', path: '/path/to/file4.txt' },
      ]
    },
    'Parent Folder 2': {
      'Type 1': [
        { fileName: 'file5.txt', path: '/path/to/file5.txt' },
        { fileName: 'file6.txt', path: '/path/to/file6.txt' },
      ]
    }
  };

  filteredData: ParentFolder = this.groupedData;

  searchFolders() {
    const filter = this.searchQuery.toLowerCase();
    this.filteredData = {};

    for (const [parentFolder, types] of Object.entries(this.groupedData)) {
      const filteredTypes: FolderType = {};

      for (const [type, files] of Object.entries(types)) {
        const filteredFiles = files.filter(file =>
          file.fileName.toLowerCase().includes(filter)
        );

        if (filteredFiles.length > 0 || type.toLowerCase().includes(filter)) {
          filteredTypes[type] = filteredFiles;
        }
      }

      if (Object.keys(filteredTypes).length > 0 || parentFolder.toLowerCase().includes(filter)) {
        this.filteredData[parentFolder] = filteredTypes;
      }
    }
  }

  toggleTypes(parentFolderId: unknown) {
    const folderId = String(parentFolderId); // Ensure it is converted to a string
    const types = document.getElementById(`types-${folderId}`);
    if (types) {
      types.style.display = types.style.display === 'none' ? 'block' : 'none';
    }
  }

  toggleFiles(typeId: string) {
    const files = document.getElementById(`files-${typeId}`);
    if (files) {
      files.style.display = files.style.display === 'none' ? 'block' : 'none';
    }
  }
}

