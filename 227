                {% for file in files %}
                <div class="file-item">
                    <div class="file-name">
                        <h4>Filename</h4>
                        <p><a href="{{ file.Path }}" class="file-link">{{ file.FileName }}</a></p>
                    </div>
                    <div class="folder-name">
                        {% if file.Folder != file.FileName %}
                            <h4>Type</h4>
                            <p>{{ file.Folder }}</p>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
