<div class="container">
  <h1>{{ title }}</h1>

  <!-- Search Input and Button -->
  <div class="search-container">
    <input
      type="text"
      [(ngModel)]="searchQuery"
      placeholder="Search for parent folders, types, or filenames..."
      class="search-input"
    />
    <button class="search-button" (click)="searchFolders()">Search</button>
  </div>

  <!-- Parent Folder Cards -->
  <div *ngFor="let parentFolder of filteredData | keyvalue">
    <div class="folder-card">
      <div class="folder-title" (click)="toggleTypes(parentFolder.key)">
        {{ parentFolder.key }}
      </div>
      <div id="types-{{ parentFolder.key }}" class="type-info">
        <div *ngFor="let type of parentFolder.value | keyvalue" class="type-item">
          <div class="type-title" (click)="toggleFiles(parentFolder.key + '-' + type.key)">
            {{ type.key }}
          </div>
          <div id="files-{{ parentFolder.key }}-{{ type.key }}" class="file-info">
            <div *ngFor="let file of type.value" class="file-item">
              <div class="file-name">
                <h4>Filename</h4>
                <p><a href="{{ file.path }}" target="_blank" class="file-link">{{ file.fileName }}</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

